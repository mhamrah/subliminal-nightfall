{
  "name": "@subliminal/core",
  "version": "1.0.0",
  "description": "Core color definitions and theme tokens for Subliminal Nightfall",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./colors": {
      "import": "./dist/colors.js",
      "types": "./dist/colors.d.ts"
    },
    "./theme": {
      "import": "./dist/theme.js",
      "types": "./dist/theme.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "theme",
    "colors",
    "color-scheme"
  ],
  "author": "Michael Hamrah",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
